<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nurika.opaku">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Opaku.NoActionBar">
        <activity android:name="com.nurika.opaku.view.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.home.HomeActivity"
            android:theme="@style/Theme.Opaku.NoActionBar" />
        <activity
            android:name=".view.user.UserActivity"
            android:theme="@style/Theme.Opaku.NoActionBar" />
        <activity
            android:name=".view.catalog.CatalogDetailActivity"
            android:theme="@style/Theme.Opaku.NoActionBar" />
    </application>

</manifest>