<resources>


    <style name="Theme.Opaku" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.Opaku.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="Theme.Opaku.NoActionBar">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="CollapsingToolbarLayoutTextStyle" parent="Theme.Opaku.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>